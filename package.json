{
  "name": "proyectopolis",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --config vite.config.web.ts",
    "dev:electron": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:web": "vue-tsc --noEmit && vite build --config vite.config.web.ts",
    "build:electron": "vue-tsc --noEmit && vite build",
    "build:win": "npm run build:electron && electron-builder --win",
    "build:mac": "npm run build:electron && electron-builder --mac",
    "build:linux": "npm run build:electron && electron-builder --linux",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run format:check",
    "create-module": "node create-folder.js"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@tailwindcss/vite": "4.1.11",
    "@tanstack/vue-table": "8.21.3",
    "@vee-validate/zod": "4.15.1",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/core": "^1.47.0",
    "apexcharts": "^5.3.5",
    "axios": "1.11.0",
    "bpmn-js": "^8.10.0",
    "bpmn-js-task-resize": "^1.2.0",
    "daisyui": "5.0.50",
    "date-fns": "^2.30.0",
    "echarts": "^6.0.0",
    "floating-vue": "5.2.2",
    "html-to-image": "^1.11.13",
    "json-server": "^1.0.0-beta.3",
    "jspdf": "3.0.1",
    "jspdf-autotable": "5.0.2",
    "lottie-web": "^5.13.0",
    "lucide-vue-next": "^0.545.0",
    "orgchart": "^5.0.0",
    "pinia": "3.0.3",
    "tailwindcss": "4.1.11",
    "v-calendar": "^3.1.2",
    "vee-validate": "4.15.1",
    "vue": "^3.5.24",
    "vue-draggable-plus": "^0.6.0",
    "vue-multiselect": "^3.3.1",
    "vue-router": "4.5.1",
    "vue-toastification": "2.0.0-rc.5",
    "vue3-apexcharts": "^1.9.0",
    "xlsx": "0.18.5"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.3",
    "eslint-plugin-vue": "10.4.0",
    "prettier": "3.6.2",
    "typescript": "~5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-svg-loader": "^5.1.0",
    "vue-tsc": "^3.1.3"
  },
  "build": {
    "appId": "com.proyectopolis",
    "productName": "Proyectopolis",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
